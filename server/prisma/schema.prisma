generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  OWNER
}


model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  address   String
  role      Role
  createdAt DateTime @default(now())
  stores    Store[]  @relation("StoreOwner")
  ratings   Rating[]

  @@index([name])
  @@index([role])
}

model Store {
  id        String   @id @default(uuid())
  name      String
  address   String
  owner     User     @relation("StoreOwner", fields: [ownerId], references: [id])
  ownerId   String
  ratings   Rating[]
  createdAt DateTime @default(now())

  @@index([name])
  @@index([address])
  @@index([ownerId])
}

model Rating {
  id        String   @id @default(uuid())
  value     Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String
  createdAt DateTime @default(now())

  @@index([value])
  @@index([userId])
  @@index([storeId])
}
